.pwd-group {
    transition: all 0.2s ease-out;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.pwd-group__icon {
    width: 16px;
    height: 16px;
    background-image: url('project://database/Packages/com.shlifedev.ugs/Editor/GUI/Textures/icon_folder.png');
    -unity-background-image-tint-color: orange;
}

.pwd-group:hover {
    transition: all 0.4s ease-out;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 2px;
    padding: 0 8px 0 8px;
}
